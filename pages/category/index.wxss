page {
  height: 100%;
}
page .category {
  height: 100%;
}
page .category .category-content {
  width: 100%;
  height: calc(100% - 105rpx);
  display: flex;
}
page .category .category-content .category-left-wrap {
  width: 110%;
  height: 100%;
  flex: 2;
  overflow: hidden;
}
page .category .category-content .category-left-wrap .category-left {
  height: 100%;
  width: 107%;
  flex: 2;
}
page .category .category-content .category-left-wrap .category-left .cat_level-0 {
  text-align: center;
  padding: 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}
page .category .category-content .category-left-wrap .category-left .active {
  background: #fff;
  position: relative;
}
page .category .category-content .category-left-wrap .category-left .active::before {
  content: "";
  width: 10rpx;
  height: 50rpx;
  position: absolute;
  background: #F8554D;
  left: 0;
  top: 25rpx;
}
page .category .category-content .category-right-wrap {
  flex: 6;
  background: #fff;
  height: 100%;
}
