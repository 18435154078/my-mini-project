.good_detail {
  padding-bottom: 100rpx;
}
.good_detail .swiper-list {
  width: 750rpx;
  height: 750rpx;
}
.good_detail .swiper-list swiper-item {
  width: 100%;
  height: 100%;
}
.good_detail .swiper-list swiper-item image {
  width: 100%;
  height: 100%;
}
.good_detail .good-price {
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  color: red;
  font-size: 36rpx;
}
.good_detail .good-name {
  width: 100%;
  display: flex;
  background: #fff;
  padding: 0 20rpx 10rpx;
  align-items: center;
}
.good_detail .good-name text {
  flex: 6;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-right: 20rpx;
}
.good_detail .good-name view {
  border-left: 4rpx solid #999;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.good_detail .good-name view image {
  width: 50rpx;
  height: 50rpx;
}
.good_detail .good-name view text {
  font-size: 24rpx;
  padding: 0;
}
.good_detail .goods-introduce {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.good_detail .goods-introduce text {
  display: block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 40rpx;
}
.good_detail .bottom-bar {
  width: 100%;
  display: flex;
  position: fixed;
  justify-content: space-between;
  height: 100rpx;
  bottom: 0;
  z-index: 9999;
}
.good_detail .bottom-bar view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  flex: 1.2;
  padding: 10rpx 0;
  box-sizing: border-box;
  position: relative;
}
.good_detail .bottom-bar view text {
  font-size: 28rpx;
}
.good_detail .bottom-bar view .iconfont {
  font-size: 36rpx;
}
.good_detail .bottom-bar view .btn {
  width: 100%;
  height: 100%;
  background: rgba(240, 240, 240, 0);
  position: absolute;
  top: 0;
  left: 0;
}
.good_detail .bottom-bar .active {
  background: #eee;
}
.good_detail .bottom-bar .add-shopcar {
  background: #FDA800;
  color: #fff;
  font-size: 30rpx;
  flex: 2;
}
.good_detail .bottom-bar .shop {
  background: #EA444E;
  color: #fff;
  font-size: 30rpx;
  flex: 2;
}
