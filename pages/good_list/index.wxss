.good-list-wrap .good-list {
  overflow: hidden;
}
.good-list-wrap .good-list ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.good-list-wrap .good-list .good-item {
  width: 48%;
  float: left;
  margin: 15rpx 0 0 15rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.good-list-wrap .good-list .good-item .good-item-cover {
  width: 100%;
  height: 322rpx;
}
.good-list-wrap .good-list .good-item .good-name {
  width: 100%;
  margin: 10rpx 0;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.good-list-wrap .good-list .good-item .good-price {
  color: red;
  float: left;
  font-size: 36rpx;
}
.good-list-wrap .good-list .good-item .good-number {
  float: right;
  font-size: 24rpx;
  color: #666;
}
.good-list-wrap .loading,
.good-list-wrap .has-no {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
}
